   float size;
   color c1;
   
 Ball(float tempX, float tempY, tempSize, tempc){
  xpos = tempX
  ypos = tempY
  size = tempSize;
  c1 = tempC;
 }
 
 void display(){
 fill(c1);
 ellipse(xpos, ypos, size, size);
