/this is hwere I create a variable to hold mynew object
Object_Name object_instance;

void setup(){
 //Where i construct and initialize my object
 object_instance=new Object_Name(SET PROPERIES HERE);
}

void draw(){
 //Where I can interact with the object and use its methods
 object_instance.var1 = 100;

object_instance.Method_Name();
}




class *object name*{
 //Where to declare all variables
 // ex. float;
 boolean var2;

 /Where I build the constructor
 *Object name* (foat tempInput){
 //Where I use my temp values to set
 /The initial value of my parameters(var1, var2. etc)
}

 //This is where Idefine the methos of the object
 void *methodname*(float tempInput){
 }
 
 
 -----------------------------EXAMPLE-----------------------------------
 Ball ball1;
 
 void setup(){
  ball1 = new Ball(100, 100, 20, color(255,0, 0));
 }
 
 void draw(){
  ball1.display();
 }
 
 
 class Ball{
   float xpos;
