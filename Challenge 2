void setup() {
  size (650,650);
}

void draw () {
  background (255,255,255);
  fill (100, 50, 250);
  ellipse (mouseX +50, mouseY +50, 25, 25);
  fill(10, 150, 250);
  ellipse (mouseX +50, mouseY -50, 25, 25);
  fill(50, 200, 40);
  ellipse (mouseX -50, mouseY -50, 25, 25);
  fill(10, 50, 100);
  ellipse (mouseX -50, mouseY +50, 25, 25);
}
